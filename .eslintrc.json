{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "env": {
    "node": true
  },
  "globals": {
    "window": false
  },
  "overrides": [
    {
      "files": ["jest.config.js", "jest.setup.js", "**/*.spec.js"],
      "env": {
        "jest": true,
        "browser": true
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
